<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="20dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Informações da lista"
        android:textAlignment="textStart"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/information_circle_outline"
        app:iconTint="@color/md_theme_onSurface"
        app:iconPadding="20dp"
        app:iconSize="30dp" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/btnInfo"
        app:layout_constraintTop_toBottomOf="@id/btnInfo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Compartilhar"
        android:textAlignment="textStart"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/share_social_outline"
        app:iconTint="@color/md_theme_onSurface"
        app:iconPadding="20dp"
        app:iconSize="30dp" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/btnShare"
        app:layout_constraintTop_toBottomOf="@id/btnShare" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnlogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Sair"
        android:textAlignment="textStart"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/log_out_outline"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:iconTint="@color/md_theme_onSurface" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toTopOf="@id/btnlogOut"
        app:layout_constraintTop_toBottomOf="@id/btnlogOut" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Excluir lista"
        android:textAlignment="textStart"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/trash_outline"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:iconTint="@color/md_theme_errorContainer_mediumContrast" />

</LinearLayout>